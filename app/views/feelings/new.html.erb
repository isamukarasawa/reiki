<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規投稿ページ
      </h1>
    </div>
  </div>
</section>

<% if @feeling.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@feeling.errors.count, "error")%> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @feeling.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @feeling do |f| %>

          <div class="field">
            <%= f.label :title, "種類", class: "label" %>
            <%= f.text_field :title, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body, "感想", class: "label" %>
            <%= f.text_area :body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>